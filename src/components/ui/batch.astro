---
const {
  text,
  link,
  bg = '#fff',
  color = 'var(--black)',
  fontSize = '1rem',
  radius = '1rem',
} = Astro.props;

---
<a href={`/articles/${link}`} class="batch">
  {text}
</a>

<style define:vars={{fontSize, radius, bg, color}} lang="scss">
  .batch {
    padding: 0.5rem 1.5rem;
    border-radius: var(--radius);
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: var(--bg);
    color: var(--color);
    font-size: var(--fontSize);
  }
  @include mixin.mobile {
    .batch {
      padding-inline: 1rem;
      font-size: max(calc(var(--fontSize) * 0.9), 0.75rem);
    }
  }
</style>