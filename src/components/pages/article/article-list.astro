<div class="article-list">
  <div class="card__border" />
  <slot />
</div>

<style lang="scss">
  .article-list {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    // gap: 0.5rem;
    margin-top: -1.25rem;
    flex: 1;
    position: relative;
  }
  .card__border {
    position: absolute;
    border: 2px solid var(--gray-10);
    border-radius: 1.5rem;
    pointer-events: none;
    opacity: 0;
    transition-property: left, top, width, height;
    transition-duration: 0.3s;
    left: anchor(--card left);
    top: anchor(--card top);
    width: anchor-size(--card width);
    height: anchor-size(--card height);
  }
  @media (hover: hover) {
    .article-list {
      &:hover {
        .card__border {
          opacity: 1;
        }
      }
    }
  }
  @include mixin.phone {
    .article-list {
      display: revert;
    }
  }
</style>