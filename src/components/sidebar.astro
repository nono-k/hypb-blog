---
import Accordion from "./ui/accordion.astro";
import TableOfContents from "./tableOfContents.astro";
import SquareAdUnit from "./adUnit/SquareAdUnit.astro";
import { category, tags } from "../lib/constants";

const categoryTag = [
  {
    title: 'Category',
    items: category.map(item => ({
      ...item
    }))
  },
  {
    title: 'Tag',
    items: tags.map(item => ({
      ...item
    }))
  }
]

const { blog } = Astro.props;
---
<div class="sidebar for-large">
  <div class:list={["accordion-wrapper", !blog && 'sticky' ]}>
    {categoryTag.map((item, i) => {
      const { title, items } = item;
      return (
        <Accordion title={title} items={items} blog={blog} open={i === 0} />
      )
    })
  }
  </div>
  {blog ?
    <div class="tableOfContent-wrapper">
      <TableOfContents />
      <div class="adUnit">
        <SquareAdUnit />
      </div>
    </div>
    :
    <div class="adUnit sticky">
      <SquareAdUnit />
    </div>
  }
</div>

<style lang="scss">
  .accordion-wrapper {
    display: flex;
    flex-direction: column;
    gap: 24px;
    // &.sticky {
    //   position: sticky;
    //   top: 24px;
    // }
  }
  .tableOfContent-wrapper {
    position: sticky;
    top: 24px;
  }
  .adUnit {
    margin-top: 1.5rem;
    &.sticky {
      position: sticky;
      top: 24px;
    }
  }
</style>